<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchUpi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable UPI"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchGooglePay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Google Pay"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchPhonePe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable PhonePe"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchPaytm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Paytm"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchCOD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Cash on Delivery (COD)"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="24dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
